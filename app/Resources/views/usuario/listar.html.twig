{% extends 'base.html.twig' %}
{% block body %}
    <h1>Lista de Usuarios</h1>
    <div class="container-fluid">
        <div class="row  justify-content-md-center">
            <div class="col-12 col-md-auto">
                <table id="table_id" class="table table-striped table-responsive">
                    <thead class="thead-default">
                        <tr>
                            <th class="awesome">Nombres</th>
                            <th class="awesome">Apellido</th>
                            <th class="awesome">Telefono</th>
                            <th class="awesome">Mail</th>
                            <th class="awesome">Dni</th>
                            <th class="awesome">Roles</th>
                            <th class="awesome">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for usuario in usuarios %}
                            <tr class="table-active">
                                <td>{{ usuario.nombre }}</td>
                                <td>{{ usuario.apellido }}</td>
                                <td>{{ usuario.telefono }}</td>
                                <td>{{ usuario.mail }}</td>
                                <td>{{ usuario.dni }}</td>
                                <td>
                                    {% for rol in usuario.roles %}
                                        {{ rol|e }}
                                    {% endfor %}                
                                </td>
                                <td>
                                    <div class="btn-group btn-group-toggle">
                                        <a class="btn btn-info" href="{{ path('usuario_mostrar', { 'id': usuario.id }) }}">Mostrat</a>
                                        <a class="btn btn-success" href="{{ path('usuario_editar', { 'id': usuario.id }) }}">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
