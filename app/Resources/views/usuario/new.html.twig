{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="page-header">
                    <h2>Nuevo Usuario </h2>
                </div>
            </div>
        </div>
        <div class="row justify-content-md-center">
            <div class="col-12 col-md-auto">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">
                        {{ form_label(form.iup, 'Nombre de Usuario') }}
                        {{ form_widget(form.iup, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.iup)}}</span>
                    </div>
                    <div class="col">
                        {{form_label(form.clave, 'Clave')}}
                        {{ form_widget(form.clave, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.clave)}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{form_label(form.rol, 'Rol')}}
                        {{ form_widget(form.rol, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.rol)}}</span>
                    </div>
                    <div class="col">
                        {{form_label(form.nombre, 'Nombre')}}
                        {{ form_widget(form.nombre, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.nombre)}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{form_label(form.direccion, 'Dirección')}}
                        {{ form_widget(form.direccion, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.direccion)}}</span>
                    </div>
                    <div class="col">
                        {{form_label(form.telefono, 'Teléfono')}}
                        {{ form_widget(form.telefono, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.telefono)}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{form_label(form.mail)}}
                        {{ form_widget(form.mail, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.mail)}}</span>
                    </div>
                    <div class="col">
                        {{form_label(form.dni, 'DNI')}}
                        {{ form_widget(form.dni, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.dni)}}</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        {{form_label(form.localidad, 'Localidad')}}
                        {{ form_widget(form.localidad, {'attr' : {'class' : 'form-control' }}) }}
                        <span class="text-danger"> {{form_errors(form.localidad)}}</span>
                    </div>
                    <div class="col align-self-end align-items-end">
                        <input class="btn btn-sucess" type="submit" value="Crear" />
                    </div> 
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
