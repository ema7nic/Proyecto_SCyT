{% extends 'base.html.twig' %}
{% block body %}
    <h1>Lista de Proyectos/Grupos</h1>
    <div class="container-fluid">
        <div class="row  justify-content-md-center">
            <div class="col-12 col-md-auto">
                <p>
                    <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                        Filtros
                    </button>
                </p>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body mb-2">

                        <div class="row">
                            {{ form_start(formProyectoGrupoFilter, {attr: {novalidate: 'novalidate'}}) }}
                            {{ form_errors(formProyectoGrupoFilter) }}
                            <div class="row">
                                <div class="col">
                                    {{ form_label(formProyectoGrupoFilter.codigo, 'Nombre') }}
                                    {{ form_widget(formProyectoGrupoFilter.codigo) }}
                                    <div class="help-block with-errors">
                                        {{ form_errors(formProyectoGrupoFilter.codigo) }}
                                    </div>
                                </div>
                            </div>
                            {{ form_end(formProyectoGrupoFilter) }}
                        </div>

                        {{ form_widget(formProyectoGrupoFilter.filter, {'attr' : {'class' : 'form-control' }}) }}
                        {{ form_widget(formProyectoGrupoFilter.filter, {'attr' : {'class' : 'form-control' }}) }}

                    </div>
                </div>
            </div>
        </div>
        <div class="row  justify-content-md-center">
            <div class="col-12 col-md-auto">
                <table class="table table-responsive table-striped">
                    <thead class="thead-default">
                        <tr>
                            <th>Codigo</th>
                            <th>Codigo UTN</th>
                            <th>Nombre</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Saldo</th>
                            <th>Usuario</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for proyectoGrupo in proyectoGrupos %}
                            <tr>
                                <td>{{ proyectoGrupo.codigo }}</td>
                                <td>{{ proyectoGrupo.codigoUtn }}</td>
                                <td>{{ proyectoGrupo.codigo }}</td>
                                <td>{% if proyectoGrupo.fechaInicio %}{{ proyectoGrupo.fechaInicio|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{% if proyectoGrupo.fechaFin %}{{ proyectoGrupo.fechaFin|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ proyectoGrupo.saldo }}</td>
                                <td>{{ proyectoGrupo.usuario.nombre }}</td>
                                <td>
                                    <div class="btn-group btn-group-toggle">
                                        <a class="btn btn-info" href="{{ path('proyectogrupo_mostrar', { 'id': proyectoGrupo.id }) }}">Mostar</a>
                                        <a  class="btn btn-success" href="{{ path('proyectogrupo_editar', { 'id': proyectoGrupo.id }) }}">Editar</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class="btn-group" role="group" aria-label="false">
                    <button type="buttom" class="btn btn-success"  
                            onclick="location.href = '{#{{ path('proyectogrupo_new') }}'#}">Crear</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
